{

  "compilerOptions": {
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./scripts/dist",
    "skipDefaultLibCheck": true,

    "target": "es2020",
    "module": "es2020",
    "types": [],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts/dist"]
}
